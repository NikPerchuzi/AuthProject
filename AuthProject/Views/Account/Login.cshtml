@model AuthProject.ViewModels.LoginModel

@{
    ViewData["Title"] = "Вход на сайт";
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

@section Styles {
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <link href="/lib/bootstrap/dist/css/floating-labels.css" rel="stylesheet">
}

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="form-signin">

    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Вход в аккаунт</h1>
    </div>

    <div class="form-label-group">
        <input type="email" asp-for="Email" id="Email" class="form-control" placeholder="Email адрес" required autofocus>
        <label for="Email">Email адрес</label>
    </div>

    <div class="form-label-group">
        <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Пароль" required>
        <label for="inputPassword">Пароль</label>
    </div>

    <div class="checkbox mb-3">
        @*<label>
            <input type="checkbox" value="remember-me"> Запомнить меня
        </label>*@
        <p class="mt-4 mb-3 text-muted text-center">Нет аккаунта? Нажмите<a asp-action="Register" asp-controller="Account"> Зарегистрироваться</a></p>
    </div>

    <button class="btn btn-lg btn-primary btn-block" id="loginBTN" type="submit">Войти</button>
    <p class="mt-3 mb-3 text-muted text-center">Супер сайт &copy; 2020</p>
</form>
