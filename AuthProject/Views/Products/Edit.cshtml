@model AuthProject.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

<h1>Редактирование</h1>

<h4>Продукт</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="EditForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" id="id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Количество</label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" value="Save" id="editBTN" class="btn btn-outline-primary">Сохранить</button> | <a asp-action="Index" class="btn btn-outline-success">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $('#editBTN').on('click', function () {
            let $this = $(this);
            let id = $this.data('id');
            var model = $('#EditForm').serialize();
            $.ajax({
                url: '@Url.Action("Edit", "Products")',
                method: 'POST',
                data: {model},
                success: function (result) {
                    if (result.success) {
                        Swal.fire({
                            title: 'Успешно!',
                            text: result.message,
                            icon: 'success',
                            timer: 3000,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.href = '@Url.Action("Index", "Products")';
                        });
                    }
                    else {
                        Swal.fire({
                            title: 'Ошибка',
                            text: result.message,
                            icon: 'error',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }
                }
            })
        })
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
